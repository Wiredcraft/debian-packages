#! /bin/sh
# postrm script for ejabberd
#
# see: dh_installdeb(1)

set -e

BIN_TARGET=/opt/mongooseim/bin/ejabberd
VM_TARGET=/opt/mongooseim/etc/vm.args

if [ -f /usr/share/debconf/confmodule ]; then
    . /usr/share/debconf/confmodule
fi

case "$1" in
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    purge)
        if which ucf >/dev/null ; then
            ucf --purge $BIN_TARGET
            ucf --purge $VM_TARGET
        fi
        rm -f $BIN_TARGET
        rm -f $VM_TARGET
        rm -Rf /opt/mongooseim
        if which deluser >/dev/null ; then
            deluser mongooseim 2>/dev/null || true
            delgroup mongooseim 2>/dev/null || true
        fi
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
